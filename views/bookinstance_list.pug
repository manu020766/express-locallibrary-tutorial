extends layout

block content
  h1= title

  ul
  each val in bookinstance_list
    li 
      a(href=val.url) #{val.book.title} : #{val.imprint} - 
      if val.status=='Available'
        span.text-success
            strong #{val.status}
      else if val.status=='Maintenance'
        span.text-danger
            strong #{val.status}
      else
        span.text-warning
            strong #{val.status} 
      if val.status!='Available'
        span  (Due: #{val.due_back_formatted} )

  else
    li There are no book copies in this library.